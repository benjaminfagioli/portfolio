---
import TTag from "./TTag.astro";
const { project } = Astro.props;
---

<article class="my-3 items-center grid grid-cols-12 gap-3">
  <figure class="lg:col-span-3 rounded-md overflow-hidden">
    <img
      class="transition-all duration-500 hover:scale-105"
      src={project.image.src}
      alt={`Captura de pantalla del proyecto ${project.title}`}
    />
  </figure>
  <section class="lg:col-span-5">
    <h3 class="text-2xl">
      {project.title}
    </h3>
    <p>{project.description}</p>
  </section>
  <section
    class="flex py-3 gap-3 items-center justify-center col-span-4 flex-wrap"
  >
    {project.tags.map((tag) => <TTag tag={tag} />)}
  </section>

  <style></style>
</article>
